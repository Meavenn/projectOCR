<h3 data-toggle="collapse" data-target="#updatePost" aria-expanded="false" aria-controls="updatePost" class="title-hover">L'article : {{post.title}}</h3>
<br>
<section class="collapse show" id="updatePost">
    <form class="col-9" method="post" action="/postAdmin/{{post.id}}">
        {% import 'forms.twig' as forms %}
        <div class="form-group">
            {{forms.inputLabel('title', 'Titre', 'text','', (post.title))}}
        </div>
        <div class="form-group">
            {{forms.textareaLabel('content', 'Contenu', 'required',(post.content))}}
        </div>
        <div class="form-group">
            {{forms.inputLabel('', 'Date de cr√©ation', 'text','', (post.date_insert), 'CreationDate', 'disabled')}}
        </div>

        <div class="form-group">
            {{forms.inputLabel('', 'Date d\'affichage', 'text','', (post.date_display), 'displayDate', 'disabled')}}
            <a href="#" data-toggle="collapse" data-target="#updateDate" aria-expanded="false" aria-controls="updateDate">Modifier la date d'affichage</a>
            <span class="collapse" id="updateDate">{{forms.input('date_display', 'datetime-local','', 'displayDate', '','col-5')}}</span>
        </div>

        <input class="form-control col-3" type="submit" value="Modifier">

    </form>

    <form class="col-9" method="post" action="/postDelete/{{post.id}}">
        <input class="form-control col-3" type="submit" value="Supprimer" onclick="return confirm('Confirmer la suppression de l\'article ?');">
    </form>

</section>
