{{ include ('template.twig') }}
{{ include ('backend/navAdminView.twig') }}

<h1>LES ARTICLES</h1><br/>

<a href="/newPost">+ Ajouter un article</a>

<section class="collapse {{collapse}}" id="postsList">
    <table class="table table-hover ">

        <thead>
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>date de cr√©ation</th>
            <th>Contenu (extrait)</th>
        </tr>
        </thead>

        {% for post in posts %}
            <tr onclick="document.location='/postAdmin/{{post.ID}}'">
                <a href="/postAdmin/{{post.ID}}">
                    <td>{{post.id}}</td>
                    <td>{{post.title}}</td>
                    <td>{{post.date}}</td>
                    <td>{{post.content|slice(0,60)}}(...)</td>
                </a>
            </tr>
        {% endfor %}

    </table>
</section>