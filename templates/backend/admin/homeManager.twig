{{ include ('template.twig') }}
{{ include ('backend/navAdminView.twig') }}

<h1>HOME</h1>

<form action="/home" method="post" class="container">
    <h2 data-toggle="collapse" data-target="#section1" aria-expanded="false" aria-controls="section1" class="title-hover">
        JUMBOTRON
    </h2>
        <section class="collapse {{collapse}}" id="section1">

                {% import 'forms.twig' as forms %}

                <p class ="row justify-content-center">
                    {{forms.inputLabel('title', 'Titre', 'text', 'required', (home.title))}}
                </p>
                <p class ="row justify-content-center">
                    {{forms.inputLabel('tagline', 'Slogan', 'text', 'required', (home.tagline))}}
                </p>
        </section>
    <hr>

    <h2 data-toggle="collapse" data-target="#section2" aria-expanded="false" aria-controls="section2" class="title-hover">
        PRESENTATION
    </h2>
    <section class="collapse {{collapse}}" id="section2">

        {% import 'forms.twig' as forms %}

        <p class ="row">
            {{forms.textareaLabel('presentation', 'Présentation', 'required', (home.presentation), '', '','col-2','col-lg-6 col-11 form-control',10)}}
        </p>

    </section><br>

    <h2>CONTACT</h2>
    <section>

        {% import 'forms.twig' as forms %}

        <p class ="row">
            {{forms.inputLabel('email', 'Email de réception', 'email', 'required', (home.email))}}
        </p>

    </section><br>

    <input type="submit" value="modifier" class="form-control col-lg-2 col-11">
</form>