{{ include ('template.twig') }}

{% block content %}
<h3 class="title">Se connecter</h3>

    {% if (alert) %}
        <p class="alert alert-danger">{{ alert }}</p>
    {%  endif %}

<form action="/connect" method="post" class="container">
    {% import 'forms.twig' as forms %}

    <p class ="row justify-content-center">
        {{forms.inputLabel('pseudo', 'pseudo', 'text', 'required', (user.getPseudo ?: ''))}}

    </p>
    <p class ="row justify-content-center">
        {{forms.inputLabel('password', 'mot de passe', 'password', 'required')}}
    </p>

    <p class ="row justify-content-center">
        <input type="submit" class="form-control col-lg-2 col-11" value="se connecter">
    </p>
</form>

{% endblock %}
